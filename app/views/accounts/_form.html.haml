- form_for(@account) do |f|
  - if @account.errors.any?
    .error_explanation
      %h2
        = t("errors.template.header", :model => @account.model_name.human, :count => @account.errors.count)
        
      %ul
        - @account.errors.full_messages.each do |msg|
          %li
            = msg
  .field
    = f.label :application
    %br
    = f.text_field :application

  %p
    .actions
      = f.submit

